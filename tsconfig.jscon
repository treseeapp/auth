{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "target": "es6",
    // or a more recent ecmascript version
    "sourceMap": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "baseUrl": "./"
  }
}